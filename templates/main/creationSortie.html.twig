{% extends 'layout.html.twig' %}

{% block main %}

    <h4 align="center">Créer une sortie</h4>

    {{ form_start(creationSortieForm) }}

    {{ form_row(creationSortieForm.nom) }}
    {{ form_row(creationSortieForm.dateHeureDebut) }}
    {{ form_row(creationSortieForm.dateLimiteInscription) }}
    {{ form_row(creationSortieForm.nbInscriptionMax) }}
    {{ form_row(creationSortieForm.duree) }}
    {{ form_row(creationSortieForm.infosSortie) }}

    Campus : {{ app.user.campus }}
    {{ form_row(creationSortieForm.ville) }}    {# <select id="meetup_sport" ... #}



    <div class="row" id="row">
        <div class="col s6">
            <button class="btn waves-effect waves-light" type="submit" name="submit">Enregistrer
                <i class="material-icons right"></i>
            </button>
        </div>

        <div class="col s6">
            <button class="btn waves-effect waves-light" type="reset" name="reset">Annuler
                <i class="material-icons right"></i>
            </button>
        </div>
    </div>


    {{ form_end(creationSortieForm) }}


{% endblock %}



